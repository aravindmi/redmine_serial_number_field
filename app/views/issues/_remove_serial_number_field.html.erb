<script>
  document.addEventListener('DOMContentLoaded', function() {
    hideSerialNumber();
  });
   function hideSerialNumber() {
      const elements = document.getElementsByClassName('serial_number_cf');
      const inputElements = Array.prototype.filter.call(
        elements,
        (elements) => elements.nodeName === 'INPUT',
      );

      [...inputElements].forEach(function(element, i) {
          element.parentElement.remove();
          //alert("its working");
      });
    }
   function hideSerialNumberAfterAjax() {
      $(document).ajaxComplete(function () {
        hideSerialNumber();
      });
   }
  document.getElementById("issue_tracker_id").addEventListener("change", hideSerialNumberAfterAjax);  
</script>
